<%-include("../partials/header")%>
<div class="container" style="height:auto" ;>
    <div class="row" style="display:flex; width:100% ;flex-direction: column; align-items: center;">
        <h1>Create a new campground</h1></br>
        <div style="width:30%; margin-top: 25px;">
            <form action="/campgrounds" method="POST">

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name" name="name">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
                </div>


                <div class="form-group">
                    <input class="form-control" type="url" placeholder="Image URL" name="image">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Description" name="description">
                </div>

                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>

                <a href="/campgrounds">Go Back</a>
            </form>
        </div>
    </div>
</div>
<%-include("../partials/footer")%>